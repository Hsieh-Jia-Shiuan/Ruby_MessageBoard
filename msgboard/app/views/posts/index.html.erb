<% flash.each do |key, value| %>
  <% if key == "successlogin"%>
    <div class="alert alert-success alert-dismissible" role="alert" style="color:green">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h1><%= value %></h1>
    </div>
  <% end %>
<% end %>

<%= render 'shared/title', title: 'Post List'%>

<% @posts.each do |post| %>
  <%= render 'post', post: post %>
<% end %>