<%= render '/shared/title', title: 'Register'%>

<div class="well col-md-6">
  <% flash.each do |key, value| %>
    <% if key == "errorregister"%>
      <div class="alert alert-danger" role="alert" style="color:red"><%= value %></div>
    <% end %>
  <% end %>

  <%= form_for @user do |f| %>
  <div class="form-group">
    <%= label_tag :name %>
    <sup class="required" title="Required" style="color:red">*</sup>
    <br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <sup class="required" title="Required" style="color:red">*</sup>
    <br>
    <%= f.password_field :password%>
  </div>

  <br>
  <%= f.submit(@user.new_record? ? 'Register' : 'Update Profile', class: 'btn btn-primary') %>
  <% end %>
</div>
